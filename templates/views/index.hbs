<!DOCTYPE html>
<html lang="en">

{{>head}}

<body>
    <div class="container">
        <div class="main-content">
            {{>header}}

            <form id="form">
                <input type="text" class="input-weather" placeholder="Location">
                <button class="btn-search" type="submit">Search</button>
            </form>

            <div class="weather-info">
                <h3 class="location"></h3>
                <h3 class="forecast"></h3>
                <h3 class="max"></h3>
                <h3 class="min"></h3>
            </div>
        </div>

        {{>footer}}
    </div>

    <script src="/js/main.js"></script>
</body>

</html>